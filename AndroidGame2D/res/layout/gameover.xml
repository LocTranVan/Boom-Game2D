<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/thua"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/meu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mat_meu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        
         >
        <Button 
            android:id="@+id/bt_tieptuc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tieptuc"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@color/Red"
            />
         <Button 
            android:id="@+id/bt_mainmenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/menuchinh"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/Red"
            />
          <Button 
            android:id="@+id/bt_thoat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/thoat"
            android:padding="10dp"
            android:background="@color/Red"
            />
</LinearLayout>

</RelativeLayout>